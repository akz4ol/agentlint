{
  "name": "agentlint",
  "version": "0.1.0",
  "description": "Static analysis and security scanner for AI agent configuration files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agentlint": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "security",
    "linter",
    "static-analysis",
    "claude",
    "cursor",
    "supply-chain",
    "sarif",
    "devsecops"
  ],
  "author": "AgentLint Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/akz4ol/agentlint.git"
  },
  "bugs": {
    "url": "https://github.com/akz4ol/agentlint/issues"
  },
  "homepage": "https://github.com/akz4ol/agentlint#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^4.1.2",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/crypto-js": "^4.2.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0"
  }
}
